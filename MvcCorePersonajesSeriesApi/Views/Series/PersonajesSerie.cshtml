@model IEnumerable<MvcCorePersonajesSeriesApi.Models.Personaje>

@{
    ViewData["Title"] = "PersonajesSerie";
}

<h1>PersonajesSerie</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Imagen
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@item.Imagen" />
            </td>
        </tr>
}
    </tbody>
</table>
